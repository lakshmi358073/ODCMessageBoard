  </tr>
<% else %>	
<% @posts.each do |post| %>
  <tr>
    <td><b>Title: <%= post.title %></b></td>
  </tr>
  <tr>  
    <td><b>Content: <%= post.content %></b></td>
  </tr>
  <tr></tr><tr></tr><tr></tr>
 <% end %>
<% end %> 
</table>

